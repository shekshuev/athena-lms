{
  "name": "@athena-lms/athena-api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "apps/athena-api"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/athena-api/dist/package.json",
          "{workspaceRoot}/apps/athena-api/dist/package-lock.json"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/athena-api/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@athena-lms/athena-api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@athena-lms/athena-api:build:development"
          },
          "production": {
            "buildTarget": "@athena-lms/athena-api:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      },
      "migration:generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli migration:generate src/migrations/{args.name} --pretty -d src/app/config/migrations-data-source.ts",
          "forwardAllArgs": true,
          "cwd": "{projectRoot}"
        }
      },
      "migration:create": {
        "executor": "nx:run-commands",
        "options": {
          "command": "../../node_modules/.bin/typeorm migration:create src/migrations/{args.name}",
          "forwardAllArgs": true,
          "cwd": "{projectRoot}"
        }
      },
      "migration:run": {
        "executor": "nx:run-commands",
        "options": {
          "command": "ts-node --project tsconfig.app.json ../../node_modules/typeorm/cli migration:run -d src/app/config/migrations-data-source.ts",
          "cwd": "{projectRoot}"
        }
      }
    }
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.0.0"
  }
}
